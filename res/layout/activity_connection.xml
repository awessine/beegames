<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu_back">


    <TextView
        android:id="@+id/logoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="123dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="123dp"
        android:text="Tic Tac Toe"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:background="@drawable/btn_superdark_back"
        android:translationZ="40dp"
        android:elevation="6dp"
        android:fontFamily="@font/alata"
        android:textColor="@color/light_text"/>

    <TextView
        android:id="@+id/scoreView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="177dp"
        android:background="@drawable/btn_dark_back"
        android:elevation="6dp"
        android:fontFamily="@font/alata"
        android:text="Highscore : "
        android:textColor="@color/btn_logout_text"
        android:textSize="16sp"
        android:translationZ="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreView">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/findBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_light_back"
            android:elevation="6dp"
            android:fontFamily="@font/alata"
            android:text="Multiplayer"
            android:textAllCaps="false"
            android:textColor="@color/btn_logout_text"
            android:textSize="16sp"
            android:translationZ="40dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/SPbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_light_back"
            android:elevation="6dp"
            android:fontFamily="@font/alata"
            android:text="SinglePlayer"
            android:textAllCaps="false"
            android:textColor="@color/btn_logout_text"
            android:textSize="16sp"
            android:translationZ="40dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>