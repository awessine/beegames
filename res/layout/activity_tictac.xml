<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootTicTac"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu_back">

    <TextView
        android:id="@+id/Player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/btn_dark_back"
        android:elevation="6dp"
        android:fontFamily="@font/alata"

        android:text="Player 1"
        android:textColor="@color/btn_leaderbrd_text"
        android:textSize="16dp"
        android:translationZ="40dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout3"
        app:layout_constraintEnd_toStartOf="@+id/textView5" />

    <TextView
        android:id="@+id/Player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/btn_dark_back"
        android:elevation="6dp"
        android:fontFamily="@font/alata"

        android:text="Player 2"
        android:textColor="@color/btn_leaderbrd_text"
        android:textSize="16dp"
        android:translationZ="40dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout3"
        app:layout_constraintStart_toEndOf="@+id/textView5" />

    <TextView
        android:id="@+id/turnView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="155dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="156dp"
        android:background="@drawable/btn_superdark_back"
        android:elevation="6dp"
        android:fontFamily="@font/alata"
        android:text="Your turn"
        android:textColor="@color/light_text"
        android:textSize="20dp"
        android:translationZ="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:text="vs"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:textSize="14dp"
        android:background="@drawable/btn_superdark_back"
        android:translationZ="40dp"
        android:elevation="6dp"
        android:fontFamily="@font/alata"
        android:textColor="@color/light_text"/>

    <TableLayout
        android:id="@+id/tableLayout4"
        android:layout_width="409dp"
        android:layout_height="318dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/grid00"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:onClick="boxOnClick"
                app:srcCompat="@drawable/btn_light_back" />

            <ImageView
                android:id="@+id/grid01"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:onClick="boxOnClick"
                app:srcCompat="@drawable/btn_light_back" />

            <ImageView
                android:id="@+id/grid02"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:onClick="boxOnClick"
                app:srcCompat="@drawable/btn_light_back" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/grid10"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:onClick="boxOnClick"
                app:srcCompat="@drawable/btn_light_back" />

            <ImageView
                android:id="@+id/grid11"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:onClick="boxOnClick"
                app:srcCompat="@drawable/btn_light_back" />

            <ImageView
                android:id="@+id/grid12"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:onClick="boxOnClick"
                app:srcCompat="@drawable/btn_light_back" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/grid20"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:onClick="boxOnClick"
                app:srcCompat="@drawable/btn_light_back" />

            <ImageView
                android:id="@+id/grid21"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:onClick="boxOnClick"
                app:srcCompat="@drawable/btn_light_back" />

            <ImageView
                android:id="@+id/grid22"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:onClick="boxOnClick"
                app:srcCompat="@drawable/btn_light_back" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout3"
        android:layout_width="409dp"
        android:layout_height="318dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/cell00"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="boxOnClick"
                android:layout_margin="3dp"
                />

            <ImageView
                android:id="@+id/cell01"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="boxOnClick"
                android:layout_margin="3dp"
                 />

            <ImageView
                android:id="@+id/cell02"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="boxOnClick"
                android:layout_margin="3dp"
                 />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/cell10"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="boxOnClick"
                android:layout_margin="3dp"
                 />

            <ImageView
                android:id="@+id/cell11"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="boxOnClick"
                android:layout_margin="3dp"
                 />

            <ImageView
                android:id="@+id/cell12"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="boxOnClick"
                android:layout_margin="3dp"
                 />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/cell20"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="boxOnClick"
                android:layout_margin="3dp"
                 />

            <ImageView
                android:id="@+id/cell21"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="boxOnClick"
                android:layout_margin="3dp"
                 />

            <ImageView
                android:id="@+id/cell22"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="boxOnClick"
                android:layout_margin="3dp"
                 />
        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>